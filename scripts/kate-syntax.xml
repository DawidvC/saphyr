<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE language SYSTEM "language.dtd">
<language
    name="Saphyr"
    version="1.0"
    kateversion="2.4"
    section="Sources"
    indenter="cstyle"
    extensions="*.syp"
    author="Justin Madru (justin.jdm64@gmail.com)"
    license="GPL">
  <highlighting>
    <list name="keywords">
      <item>alias</item>
      <item>class</item>
      <item>delete</item>
      <item>enum</item>
      <item>import</item>
      <item>new</item>
      <item>sizeof</item>
      <item>struct</item>
      <item>this</item>
      <item>union</item>
    </list>
    <list name="flow">
      <item>break</item>
      <item>case</item>
      <item>continue</item>
      <item>default</item>
      <item>do</item>
      <item>else</item>
      <item>for</item>
      <item>goto</item>
      <item>if</item>
      <item>loop</item>
      <item>redo</item>
      <item>return</item>
      <item>switch</item>
      <item>until</item>
      <item>while</item>
    </list>
    <list name="types">
      <item>auto</item>
      <item>bool</item>
      <item>double</item>
      <item>float</item>
      <item>int</item>
      <item>int8</item>
      <item>int16</item>
      <item>int32</item>
      <item>int64</item>
      <item>uint</item>
      <item>uint8</item>
      <item>uint16</item>
      <item>uint32</item>
      <item>uint64</item>
      <item>vec</item>
      <item>void</item>
    </list>
    <list name="constants">
      <item>false</item>
      <item>null</item>
      <item>true</item>
    </list>
    <contexts>
      <context name="Normal" attribute="Normal" lineEndContext="#stay">
        <DetectSpaces/>
        <keyword          attribute="Keyword"      context="#stay"               String="keywords" />
        <keyword          attribute="Data Type"    context="#stay"               String="types" />
        <keyword          attribute="Control Flow" context="#stay"               String="flow" />
        <keyword          attribute="Constant"     context="#stay"               String="constants" />
        <DetectChar       attribute="Symbol"       context="#stay"               char="{" beginRegion="Brace" />
        <DetectChar       attribute="Symbol"       context="#stay"               char="}" endRegion="Brace" />
        <DetectChar       attribute="String"       context="Double Quote String" char="&quot;" />
        <DetectChar       attribute="String"       context="Backtick String"     char="`" />
        <Detect2Chars     attribute="Attribute"    context="Attribute"           char="#" char1="[" beginRegion="Attribute" />
        <Detect2Chars     attribute="Comment"      context="Line Comment"        char="/" char1="/" />
        <Detect2Chars     attribute="Comment"      context="Block Comment"       char="/" char1="*" beginRegion="Comment" />
        <RegExpr          attribute="Base-N"       context="#stay"               String="0b[0-1]+" />
        <RegExpr          attribute="Base-N"       context="#stay"               String="0o[0-7]+" />
        <HlCHex           attribute="Base-N"       context="#stay" />
        <Float            attribute="Float"        context="#stay" />
        <Int              attribute="Decimal"      context="#stay" />
        <HlCChar          attribute="Character"    context="#stay" />
        <DetectIdentifier/>
      </context>
      <context name="Double Quote String" attribute="String" lineEndContext="#stay">
        <LineContinue  attribute="String"    context="#stay" />
        <HlCStringChar attribute="Character" context="#stay" />
        <DetectChar    attribute="String"    context="#pop" char="&quot;" />
      </context>
      <context name="Backtick String" attribute="String" lineEndContext="#stay">
        <LineContinue  attribute="String"    context="#stay" />
        <HlCStringChar attribute="Character" context="#stay" />
        <DetectChar    attribute="String"    context="#pop" char="`" />
      </context>
      <context name="Attribute" attribute="Attribute" lineEndContext="#stay">
        <DetectChar char="]" attribute="Attribute" context="#pop" endRegion="Attribute" />
      </context>
      <context name="Line Comment" attribute="Comment" lineEndContext="#pop">
        <DetectSpaces/>
        <IncludeRules context="##Alerts" />
        <LineContinue attribute="Comment" context="#stay"/>
      </context>
      <context name="Block Comment" attribute="Comment" lineEndContext="#stay">
        <DetectSpaces/>
        <IncludeRules context="##Alerts" />
        <Detect2Chars attribute="Comment" context="#pop" char="*" char1="/" endRegion="Comment" />
      </context>
    </contexts>
    <itemDatas>
      <itemData name="Normal"       defStyleNum="dsNormal"      spellChecking="false" />
      <itemData name="Keyword"      defStyleNum="dsKeyword"     spellChecking="false" />
      <itemData name="Control Flow" defStyleNum="dsControlFlow" spellChecking="false" />
      <itemData name="Attribute"    defStyleNum="dsAttribute" />
      <itemData name="Data Type"    defStyleNum="dsDataType"    spellChecking="false" />
      <itemData name="Decimal"      defStyleNum="dsDecVal"      spellChecking="false" />
      <itemData name="Float"        defStyleNum="dsFloat"       spellChecking="false" />
      <itemData name="Base-N"       defStyleNum="dsBaseN"       spellChecking="false" />
      <itemData name="Constant"     defStyleNum="dsConstant"    spellChecking="false" />
      <itemData name="Character"    defStyleNum="dsChar"        spellChecking="false" />
      <itemData name="String"       defStyleNum="dsString" />
      <itemData name="Symbol"       defStyleNum="dsOperator"    spellChecking="false" />
      <itemData name="Comment"      defStyleNum="dsComment" />
    </itemDatas>
  </highlighting>
  <general>
    <comments>
      <comment name="singleLine" start="//" />
      <comment name="multiLine" start="/*" end="*/" region="Comment"/>
    </comments>
    <keywords casesensitive="true" />
  </general>
</language>
